{
  "name": "semantest-nodejs-server",
  "version": "1.0.0",
  "description": "Semantest Node.js server with comprehensive security",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:test": "NODE_ENV=test node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "jest --coverage",
    "test:unit": "jest --testMatch='**/*.test.ts' --coverage",
    "test:integration": "jest --testMatch='**/*.integration.test.ts'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:security": "npm audit && npm run test:e2e -- --grep='Security|Attack|CSRF|XSS|JWT'",
    "test:performance": "playwright test performance-security.e2e.test.ts",
    "test:visual": "playwright test visual-regression.e2e.test.ts",
    "test:visual:update": "playwright test visual-regression.e2e.test.ts --update-snapshots",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "build:extension": "cd ../extension.chrome && npm run build"
  },
  "keywords": [
    "semantest",
    "automation",
    "browser-extension",
    "nodejs",
    "coordination",
    "event-driven",
    "typescript-eda",
    "websocket",
    "security",
    "jwt",
    "csrf",
    "rate-limiting",
    "e2e-testing",
     "api-gateway"
  ],
  "author": "Semantest Team <team@semantest.com>",
  "license": "GPL-3.0",
  "homepage": "https://semantest.com/packages/server",
  "repository": {
    "type": "git",
    "url": "https://github.com/semantest/semantest.git",
    "directory": "packages/server"
  },
  "bugs": "https://github.com/semantest/semantest/issues",
  "dependencies": {
    "@types/ws": "^8.18.1",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.integration.test.ts",
      "!src/__tests__/**"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/src/__tests__/e2e/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
