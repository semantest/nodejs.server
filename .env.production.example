# Production Environment Configuration Template
# Copy this file to .env.production and fill in the values

# Node Environment
NODE_ENV=production
PORT=3000
WS_PORT=8080

# Database Configuration
DATABASE_URL=postgresql://semantest_user:your_password@postgres:5432/semantest_prod
DB_USER=semantest_user
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=redis-cluster
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=https://semantest.com,https://app.semantest.com,https://chrome.semantest.com

# API Keys for Image Generation Providers
OPENAI_API_KEY=sk-your-openai-api-key
STABILITY_API_KEY=your-stability-api-key
MIDJOURNEY_API_KEY=your-midjourney-api-key

# AWS S3 Configuration for Image Storage
S3_BUCKET=semantest-images-prod
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# CDN Configuration
CDN_URL=https://cdn.semantest.com

# Worker Configuration
WORKER_CONCURRENCY=10
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_IMAGE_GENERATION=10

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Email Configuration (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
EMAIL_FROM=noreply@semantest.com

# Feature Flags
ENABLE_IMAGE_GENERATION=true
ENABLE_WEBSOCKET_EVENTS=true
ENABLE_RATE_LIMITING=true
ENABLE_MONITORING=true

# Security
ENCRYPTION_KEY=your_32_character_encryption_key
COOKIE_SECRET=your_cookie_secret

# External Services
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# Deployment Configuration
DEPLOYMENT_ENV=production
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_CLUSTER=semantest-prod